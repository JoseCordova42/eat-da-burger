<div class="container">

    <div class="jumbotron">
        <h1 class="display-4 text-center">EAT-DA-BURGER</h1>
    </div>

    <div class="addBurg">
        <h2 class="text-center">Add a Burger!</h2>
        <form>
            <div class="container">
                <textarea class="form-control" id="brg" rows="1" name="name"></textarea>
            </div>
            <div class="container text-center">
                <br>
                <button class="btn btn-secondary" type="submit" id="addBurg">Add Burger</button>
            </div>
        </form>
    </div>
    <br>

    <div class="burgLists">
        <div class="container">
            <div class="row">
                <div id="addedBurgers" class="col-md-6">
                    <h2 class="text-center">Burgers to be Eaten!</h2>
                    <ul>
                        {{#each burgers}}
                        <li>
                            <p>{{this.burger_name}} <button class="btn btn-secondary devBurg"
                                    data-id="{{this.id}}" data-devoured="{{devoured}}">Devour!</button></p>
                        </li>
                        {{/each}}
                    </ul>
                </div>

                <div id="removedBurgers" class="col-md-6">
                    <h2 class="text-center">Burgers Eaten!</h2>
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        {{> burgers/burger-block devoured=true}}
                        {{/if}}
                        {{/each}}
                    </ul>
                </div>
            </div>
        </div>
    </div>

</div>